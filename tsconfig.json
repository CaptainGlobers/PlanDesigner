{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": false,
    "failOnTypeErrors": true,
    "sourceMap": true,
    "declaration": true,
	"stripInternal": true,
	"watch": true,
    "outFile": "demo/demo.js"
  },
  "include": [
    "lib/**/*.ts",
    "demo/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "grunt",
    "**/*.spec.ts"
  ]
}